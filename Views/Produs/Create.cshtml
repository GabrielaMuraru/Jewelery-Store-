@model MagazinDeBijuteriiPROIECTFINAL.Models.ProdusModel

@{
    ViewBag.Title = "Adaugare Produs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: white">Creeaza</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
